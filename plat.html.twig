{% extends 'base.html copy.twig'%}

{% block title %}Liste des Plats{% endblock %}
      {% block body %}
    <div class="container text-center">
    <h1>Liste des Plats</h1>
    <table class="table">
    <thead class="thead-danger text-danger">
        <tr>
            <th>NÂ°</th>
            <th scope="col">Nom</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">Prix</th>
        </tr>
    </thead>
    <tbody>
        {% for you in pass %}
            <tr>
                <td>{{ you.id }}</td>
                <td>{{ you.nom }}</td>
                <td><img src="{{ asset('fichiers/' ~ you.image) }}" width="50"></td>
                <td>{{ you.description }}</td>
                <td>{{ you.prix }}</td>
                <td>
                <form action="{{ path('plat_manage', {'id': you.id}) }}" method="POST">
                <button class="btn btn-success btn-sm ml-1" name="id" value="{{ you.id }}" onclick="validerReservation({{ you.id }})">Modifier</button>
                </form>
                </td>
                <td>
                <form action="{{ path('plat_delete', {'id': you.id}) }}" method="POST">
                <button class="btn btn-danger btn-sm ml-1" name="id" value="{{ you.id }}" onclick="validerReservation({{ you.id }})">Supprimer</button>
                </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
      {% endblock %}
