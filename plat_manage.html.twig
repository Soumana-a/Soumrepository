{% extends 'base.html copy.twig'%} {% block title %}Insertion{% endblock %} {%
block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4 my-4 btn-primary">
      <div class="card">
        <div class="card-body text-success">
          <h3 class="text-success text-center">
            {% if plat.id %}Modifier le plat{% else %}Créer un nouveau plat{%
            endif %}
          </h3>
          <form
            action="{{ path('plat_manage', { id: plat.id }) }}"
            method="post"
            enctype="multipart/form-data"
            class="mt-5"
          >
            <div class="row">
              <div class="form-group text-aligne mb-5">
                <label for="nom">Nom :</label>
                <input
                  type="text"
                  id="nom"
                  name="nom"
                  value="{{ plat.nom }}"
                  class="form-control"
                  required
                />

                <label for="image">Image :</label>
                <input
                  type="file"
                  id="image"
                  name="image"
                  class="form-control"
                />

                <label for="description">Description :</label>
                <textarea
                  id="description"
                  name="description"
                  class="form-control"
                  >{{ plat.description }}</textarea
                >

                <label for="prix">Prix :</label>
                <input
                  type="number"
                  id="prix"
                  name="prix"
                  value="{{ plat.prix }}"
                  class="form-control"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary text-center">
                {% if plat.id %}Enregistrer les modifications{% else %}Créer le
                plat{% endif %}
              </button>
          </form>
        </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
